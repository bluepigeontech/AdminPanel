<%= render :partial => 'layouts/partials/location_header' %>
<p id="notice"><%= notice %></p>

<ul class="collapsible popout" data-collapsible="accordion" watch>
    <% if access_locations_edit %>
     <li>
        <div class="collapsible-header <% if @locality.errors.any? %>active<% end %>">
            Add a new Locality
        </div>
        <div class="collapsible-body card-panel">
            <%= render :partial => 'form', :locals => { :locality => @locality }  %>
        </div>
     </li>
    <% end %>
    <% @localities.each do |locality| %>
        <li>
            <div class="collapsible-header header-info <% if locality.errors.any? %>active<% end %>">
                <div class="row">
                    <div class="col s12">
                        <div class="row">
                            <div class="col s1">
                                <%= locality.city.state.country.name %>
                            </div>
                            <div class="col s2">
                                <%= locality.city.state.name %>
                            </div>
                            <div class="col s2">
                                <%= locality.city.name %>
                            </div>
                            <div class="col s2">
                                <%= locality.name %>
                            </div>
                            <div class="right">
                                <!-- <i class="mdi-action-delete"></i> -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="collapsible-body card-panel">
                <%= render :partial => 'form', :locals => { :locality => locality }  %>
            </div>
        </li>
    <% end %>
</ul>

<br>


