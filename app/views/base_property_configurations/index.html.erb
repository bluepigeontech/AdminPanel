<p id="notice"><%= notice %></p>

<ul class="collapsible popout" data-collapsible="accordion" watch>
    <% if access_projects_edit %>
     <li>
        <div class="collapsible-header <% if @property_configuration.errors.any? %>active<% end %>">
            Add a new Property Configuration
        </div>
        <div class="collapsible-body card-panel">
            <%= render :partial => 'form', :locals => { :property_configuration => @property_configuration }  %>
        </div>
     </li>
    <% end %>
    <% @property_configurations.each do |property_configuration| %>
        <li>
            <div class="collapsible-header header-info <% if property_configuration.errors.any? %>active<% end %>">
                <div class="row">
                    <div class="col s12">
                        <div class="row">
                            <div class="col s3">
                                <%= property_configuration.name %>
                            </div>
                            <div class="col s4">
                            </div>
                            <div class="col s3">
                            </div>
                            <div class="right">
                                <!-- <i class="mdi-action-delete"></i> -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="collapsible-body card-panel">
                <%= render :partial => 'form', :locals => { :property_configuration => property_configuration }  %>
            </div>
        </li>
    <% end %>
</ul>