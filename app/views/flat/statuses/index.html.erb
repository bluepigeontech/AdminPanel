<p id="notice"><%= notice %></p>

<h1>Listing Flat Statuses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flat_statuses.each do |flat_status| %>
      <tr>
        <td><%= link_to 'Show', flat_status %></td>
        <td><%= link_to 'Edit', edit_flat_status_path(flat_status) %></td>
        <td><%= link_to 'Destroy', flat_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

