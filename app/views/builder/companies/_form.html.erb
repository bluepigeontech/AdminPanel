<%= builder_form.fields_for :companies, builder.companies_for_form  do |company_form| %>
  <li>
    <%= label_tag(:name, "Name") %>
    <%= company_form.text_field :name, :placeholder => "DLF Gurgaon" %>
    
    <%= label_tag(:about, "About") %>
    <%= company_form.text_field :about, :placeholder => "DLF was established in..." %>
    
    <br/>
    <h6>Contact Person Details</h6>
    <ul>
      <%= render :partial => 'builder/company/contact_people/form', :locals => { :company_form => company_form}  %>
      <%= link_to_remove_fields "remove", builder_form %>
    </ul>
  </li>
<% end %>