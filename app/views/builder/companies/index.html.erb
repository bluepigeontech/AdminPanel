<h1>Listing Builder Companies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @builder_companies.each do |builder_company| %>
      <tr>
        <td><%= link_to 'Show', builder_company %></td>
        <td><%= link_to 'Edit', edit_builder_company_path(builder_company) %></td>
        <td><%= link_to 'Destroy', builder_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

