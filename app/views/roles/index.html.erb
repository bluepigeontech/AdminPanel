<p id="notice"><%= notice %></p>

<ul class="collapsible popout" data-collapsible="accordion" watch>
    <% if access_roles_edit %>
     <li>
        <div class="collapsible-header <% if @role.errors.any? %>active<% end %>">
            Add a new Role
        </div>
        <div class="collapsible-body card-panel">
            <%= render :partial => 'form', :locals => { :role => @role }  %>
        </div>
     </li>
    <% end %>
    <% @roles.each do |role| %>
        <li>
            <div class="collapsible-header header-info <% if role.errors.any? %>active<% end %>">
                <div class="row">
                    <div class="col s12">
                        <div class="row">
                            <div class="col s4">
                                <%= role.name %>
                            </div>
                            <div class="col s4">

                            </div>
                            <div class="col s3">
                            </div>
                            <div class="right">
                                <!-- <i class="mdi-action-delete"></i> -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="collapsible-body card-panel">
                <%= render :partial => 'form', :locals => { :role => role }  %>
            </div>
        </li>
    <% end %>
</ul>

<br>


