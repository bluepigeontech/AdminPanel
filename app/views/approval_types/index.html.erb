<h1>Listing Approval Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @approval_types.each do |approval_type| %>
      <tr>
        <td><%= link_to 'Show', approval_type %></td>
        <td><%= link_to 'Edit', edit_approval_type_path(approval_type) %></td>
        <td><%= link_to 'Destroy', approval_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

