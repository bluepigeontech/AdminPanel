<%= form_for(manager) do |manager_form| %>
   <% if manager.errors.any? %>
      <div id="error_explanation">
        <div><%= pluralize(manager.errors.count, "error") %> prohibited this manager from being saved:</div>

        <ul>
        <% manager.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <div class="col s12">
        <div class="row">
            <div class="col s4">
              <%= label_tag(:role_id, "Belongs to") %>
              <%= manager_form.select(:role_id, options_for_select(@roles, :selected => manager_form.object.role_id), :prompt => 'Select Role') %>
              
            </div>
            <div class="col s4">
              <%= manager_form.check_box :verified, :placeholder => "true" %>
              <%= manager_form.label(:verified, "Verified") %>
            </div>
            <div class="col s3">
            </div>
            <div class="right">
                <!-- <i class="mdi-action-delete"></i> -->
            </div>
        </div>
      </div>
  <br/>    
    
  <% if access_managers_edit %> 
    <button class="btn cyan waves-effect waves-light" type="submit" name="action">Submit</button>
  <% end %>
<% end %>