<%= render :partial => 'layouts/partials/location_header' %>
<p id="notice"><%= notice %></p>

<ul class="collapsible popout" data-collapsible="accordion" watch>
    <% if access_locations_edit %>
     <li>
        <div class="collapsible-header <% if @state.errors.any? %>active<% end %>">
            Add a new State
        </div>
        <div class="collapsible-body card-panel">
            <%= render :partial => 'form', :locals => { :state => @state }  %>
        </div>
     </li>
    <% end %>
    <% @states.each do |state| %>
        <li>
            <div class="collapsible-header header-info <% if state.errors.any? %>active<% end %>">
                <div class="row">
                    <div class="col s12">
                        <div class="row">
                            <div class="col s1">
                                <%= state.country.name %>
                            </div>
                            <div class="col s4">
                                <%= state.name %>
                            </div>
                            <div class="col s3">
                            </div>
                            <div class="right">
                                <!-- <i class="mdi-action-delete"></i> -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="collapsible-body card-panel">
                <%= render :partial => 'form', :locals => { :state => state }  %>
            </div>
        </li>
    <% end %>
</ul>